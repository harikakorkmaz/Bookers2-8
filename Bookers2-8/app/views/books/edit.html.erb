<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>error <%= message %></li>
        <% end %>
      </ul>
      <%= form_with model:@book, local:true do |f| %>
        <h4>Title</h4><%= f.text_field :title, class:"col-xs-12" %></br>
        <h4>Opinion</h4><%= f.text_area :body, class:"col-xs-12" %><br>
        <%= f.submit "Update Book", class:"btn btn-primary btn-block col-xs-12" %>
      <% end %></br>
      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", "/books" %>
    </div> 
  </div>
</div>