<div class='container'>
  <div class='row'>
    <div class='col-lg-3'>
       <h2>User info</h2>
      <table class='table'>
          <tr><%= attachment_image_tag(@book.user,:profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
          <tr><th>Name</th><th><%= @book.user.name  %></th></tr>
          <tr><th>introduction</th><th><%= @book.user.introduction %></th></tr>
      </table>   
        <div class="row">
  	   <%= link_to '',edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
       </div>
 
      <%= render 'form', book: @booknew %>
    </div>
    <div class='col-xs-9'>
      <h2>Book detail</h2>
      <table class='table'>
        <thead>
          <tr>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= attachment_image_tag(@book.user,:profile_image, size: "40x40", fallback: "no_image.jpg") %>
            <br><%= link_to @book.user.name, user_path(@user) %></td>
            <td><%= link_to @book.title, book_path %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %></td>
              <td><%= link_to("Destroy", book_path, method: :delete, class: "btn-sm btn-danger", data: {confirm:"本当に消しますか？"}) %></td> 
            <% end %>
          </tr> 
        </tbody>
      </table>
    </div>
