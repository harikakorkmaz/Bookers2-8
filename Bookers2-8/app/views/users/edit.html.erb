<div class="container"> 
  <h1>User info</h1>
    <%= form_with model:@user, local:true do |f| %>
      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li>error <%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <label>Name </label><%= f.text_field :name %><br>
      <label>Image </label><%= f.attachment_field :profile_image %><br>
      <label>Introduction </label><%= f.text_area :introduction %>
      <div class="actions">
        <%= f.submit 'Update User' %>
      </div>
    <% end %>
  </div>